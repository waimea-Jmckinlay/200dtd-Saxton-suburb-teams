{#=====================================================
  Admin control page (DEMO)
  lets the admin pick to add a team or to edit an allready exsisting team 
  or to go back 
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

   FOOTBALL ADMIN

{% endblock %}


{% block content %}
 <h1>edit a team</h1>


    <article>

        <ul>
            {% for team in teams %}

                <li>
                    <a href="/team-admin/{{ team.id }}">
                        {{ team.name }}
                    </a>
                </li>

            {% else %}

                <p> None! </p>
    {%endfor%}
        </ul>
</article>

<h1>add a team</h1>

<article>
 <form action="/team" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Team name"
                required
            >

            <input
                type="details"
                name="details"
                placeholder="Team details"
              
            >
              <input
                type="text"
                name="players"
                placeholder="Team players"
                required
            >

            <button>Add the team</button>
</article>


<a role="button" href="/">Back </a>

{% endblock %}

