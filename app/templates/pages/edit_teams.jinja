{#=====================================================
  Things list page
  - List of things passed in as 'things' array
  - Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - All Things

{% endblock %}


{% block content %}

    <h1>teams</h1>


    <article>

        <header>
            <h3>{{ team.name }}</h3>

            <p>{{ team.details }}</p>

            <p>{{ team.players }}</p>
        </header>

        <ul>
            {% for game in games %}

                <li>
                    {{ game.location }}
                    {{ game.date }}
                    {{ game.time }}
                </li>

            {% else %}

                <p> None! </p>

            {% endfor %}
        </ul>


    
    </article>


    <article>

        <h3>Create a new row</h3>

        <form action="/add" method="POST">

            <input
                type="text"
                name="location"
                placeholder="Name of new location"
                required
            >

            <input
                type="date"
                name="date"
                placeholder="date"
                required
            >
              <input
                type="time"
                name="time"
                placeholder="time"
                required
            >
            
              <input
                type="text"
                name="team2"
                placeholder="other team id"
                required
            >

            <button>Add the row</button>

        </form>

    </article>
<a role="button" href="/admin">Back </a>
{% endblock %}

